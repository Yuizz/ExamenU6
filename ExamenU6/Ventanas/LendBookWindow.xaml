<Window x:Class="ExamenU6.LendBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExamenU6"
        mc:Ignorable="d"
        Title="Prestar libro" Icon="../imag/tomarLibro.png" Height="210" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Background="{StaticResource BrushPrimaryColor}">
            <Label Content="Prestar libro" FontSize="24" FontFamily="Times New Roman" HorizontalContentAlignment="Center" Style="{StaticResource LabelTitulo}"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Margin="10">
            <TextBox Name="RFIDBox" FontSize="14" IsReadOnly="True" Margin="20,10" Width="auto" HorizontalContentAlignment="Center"></TextBox>
            <Button Name="scanCard" Margin="40,5" FontSize="14" Click="scanCard_Click" Style="{StaticResource btnSimple}" Width="auto">Escanear tarjeta</Button>
            <Button Name="cancel" Margin="60, 5" FontSize="14" Click="cancel_Click" Style="{StaticResource btnCancelar}" Width="auto">Cancelar</Button>
        </StackPanel>
    </Grid>
</Window>
